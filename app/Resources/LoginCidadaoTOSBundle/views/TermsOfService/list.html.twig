{% extends "LoginCidadaoCoreBundle:Admin:base.html.twig" %}

{% trans_default_domain "LoginCidadaoTOSBundle" %}

{% block content %}
    <div id="client_id" class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="panel-title">{{ 'tos.admin.list.title' | trans }}</h2>
                    </div>
                    <div class="col-md-6">
                        <a href="{{ path('tos_admin_new') }}" class="btn btn-xs btn-primary pull-right">{{ 'tos.admin.new.link' | trans }}</a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row clearfix">
                    <div class="col-md-12">
                        <ol>
                            {% for version in terms %}
                                <li>
                                    {% if latest.id == version.id %}<strong>{% endif %}
                                        {{ 'tos.admin.list.item' | trans({ '%date%': version.createdAt | date('Y-m-d H:i:s') }) }}
                                        {% if latest.id == version.id %}</strong>{% endif %}
                                    <a href="{{ path('tos_admin_edit', { 'id': version.id }) }}">{{ 'tos.admin.edit' | trans }}</a>
                                </li>
                            {% endfor %}
                        </ol>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock content %}
