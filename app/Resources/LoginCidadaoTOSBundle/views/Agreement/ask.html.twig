{% extends 'PROCERGSLoginCidadaoCoreBundle::base.html.twig' %}
{% trans_default_domain "LoginCidadaoTOSBundle" %}

{% block title %}{{ 'tos.title' | trans }}{% endblock %}

{% block body %}
    {% block notificationExtreme %}
        {{ include("PROCERGSLoginCidadaoCoreBundle::notification_extreme.html.twig", { columns: 'col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3' } ) }}
    {% endblock %}

    <div class="row">
        <div class="general-content col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
            <h1>{{ 'tos.agreement.title' | trans }}</h1>

            <p>{{ 'tos.agreement.intro' | trans }}</p>

            <div class="text terms-of-service well">
                {{ render(controller('LoginCidadaoTOSBundle:TermsOfService:showLatest')) }}
            </div>

            {{ form_start(form) }}
            <p>{{ 'tos.agreement.ask' | trans }}</p>
            <p class="text-center">{{ form_widget(form.agreedAt) }} {{ form_label(form.agreedAt) }}</p>
            {{ form_widget(form.submit, { 'attr': { 'class': 'btn-block' } }) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block stylesheets_custom %}
    {% stylesheets '@lc_base_css' 'bundles/procergslogincidadaocore/css/home/*.css' filter='cssrewrite' filter='?uglifycss' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
