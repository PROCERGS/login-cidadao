    $(function() {
      $("#lc-navbar .dropdown-toggle").on("click", function() {
          console.log('passei aqui');
          debugger;
        var menu = $(this).next(".dropdown-menu").toggle();
        $("#lc-navbar .dropdown-menu").not(menu).hide();
      });
    });
</script>
{% endif %}
