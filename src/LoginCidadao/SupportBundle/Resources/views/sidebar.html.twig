{% set myController = app.request.attributes.get("_controller") | trim %}
<div class="settings-nav col-sm-3 col-lg-2">
    <ul class="nav nav-pills nav-stacked">
        {% block menu_support_items %}
            <li class="profile glyph">
                <a href="{{ path('lc_home') }}" role="button">
                    <i class="glyphicon glyphicon-arrow-left icon"></i>
                    <span>{{ 'Back to main menu'|trans }}</span>
                </a>
            </li>
            {% if is_granted('FEATURE_IMPERSONATION_REPORTS') %}
                <li class="services glyph {{ myController matches '#\PersonSupportController::#' ? 'active' }}">
                    <a href="{{ path('lc_support_person_search') }}">
                        <span>{{ 'support.search.menu' | trans }}</span>
                        <i class="glyphicon glyphicon-sunglasses icon"></i>
                    </a>
                </li>
            {% endif %}
        {% endblock %}
    </ul>
</div>
